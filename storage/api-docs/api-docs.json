{
    "swagger": "2.0",
    "info": {
        "title": "L5 Swagger API",
        "description": "L5 Swagger API description",
        "contact": {
            "email": "darius@matulionis.lt"
        },
        "version": "1.0.0"
    },
    "host": "127.0.0.1:8000/api",
    "basePath": "/",
    "schemes": [
        "http",
        "https"
    ],
    "paths": {
        "/categories": {
            "get": {
                "tags": [
                    "categories"
                ],
                "summary": "Get list of categories",
                "description": "Returns list of categories",
                "operationId": "getCategpriesList",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "count": {
                                    "type": "integer"
                                },
                                "categories": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#definitions/category"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
        "/items/{itemID}/": {
            "get": {
                "tags": [
                    "items"
                ],
                "summary": "Get product",
                "description": "Returns product",
                "operationId": "getItem",
                "parameters": [
                    {
                        "name": "itemID",
                        "in": "path",
                        "description": "Item ID",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "item": {
                                    "type": "object",
                                    "$ref": "#definitions/item"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        }
    },
    "definitions": {
        "category": {
            "properties": {
                "id": {
                    "description": "Category ID",
                    "type": "integer"
                },
                "name": {
                    "description": "Category Name",
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "item": {
            "properties": {
                "id": {
                    "description": "Item ID",
                    "type": "integer"
                },
                "name": {
                    "description": "Item Name",
                    "type": "string"
                },
                "category": {
                    "$ref": "#definitions/category"
                },
                "parameters": {
                    "type": "object"
                },
                "created_at": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        }
    },
    "tags": [
        {
            "name": "categories",
            "description": "have products"
        },
        {
            "name": "items",
            "description": "product"
        }
    ]
